@model  RoomType
@{
    Layout = "~/Views/Shared/_InfoLayout.cshtml";
    ViewBag.Title = "产品类型选项";
}

<script type="text/javascript">
    jQuery(document).ready(function () {
        $(".datepicker").datepicker({ changeMonth: true, changeYear: true, showButtonPanel: true, showOtherMonths: true, selectOtherMonths: true });
        @if (ViewBag.Success == true)
        {
<text>
        window.opener.SearchClick();
        window.close();
</text>
        }
    });
</script>
<div class="well" style="width:650px;margin:0px auto">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <fieldset>
            <legend>产品类型配置-@ViewBag.Project.Name</legend>
            @Html.HiddenFor(model => model.DepartmentId)
            @Html.MyTextFor(model => model.Name)
            @Html.MyTextFor(model => model.OverDays)
        </fieldset>
        @MyControls.FormBtn(true)
    }
</div>
