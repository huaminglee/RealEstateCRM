@using RealEstateCRM.Web
@using RealEstateCRM.Web.BLL
@using OUDAL

@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_Layout.mobile.cshtml";
    var projectid = "";
    if (Request.RequestContext.RouteData.Values["projectid"] != null) { projectid = Request.RequestContext.RouteData.Values["projectid"].ToString(); }
}
<script>
    
</script>
<div data-role="content">
    
    <div class="ui-grid-a">
        <div class="ui-block-a"><a data-role="button" onclick="load('invitealert','@(MvcApplication.RootPath + "/Project/" + projectid.ToString() + "/Home/InviteList")')">
