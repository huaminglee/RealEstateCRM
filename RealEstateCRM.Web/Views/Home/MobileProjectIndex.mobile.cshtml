        <div class="ui-block-b"><a data-role="button" onclick="load('clientedit','@(MvcApplication.RootPath + "/Project/" + projectid.ToString() + "/Home/ProjectReport")')">
                                    <img src="@(MvcApplication.RootPath + "/Content/Images/plus.png")" /><br />统计报表
                                </a></div>
    </div>
</div>
<script>
    getMenu('menupage_@projectid', { isproject: '@((!projectid.IsEmpty()).ToString().ToLower())',projectid:'@(projectid.IsEmpty()?0:int.Parse(projectid))' });
</script>
