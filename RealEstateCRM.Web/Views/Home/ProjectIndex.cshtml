@using RealEstateCRM.Web
@using RealEstateCRM.Web.BLL
@using OUDAL

@{
    ViewBag.Title = "首页";
    Layout = "~/Views/Shared/_MainListLayout.cshtml";
}
<script type="text/javascript">
        jQuery(document).ready(function () {
            $(".datepicker").datepicker({ changeMonth: true, changeYear: true, showButtonPanel: true, showOtherMonths: true, selectOtherMonths: true});
        });

    function gotoUrl(url) {
        window.location.href = url;
    }
</script>
<div class="container">

    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="">
        
    </div>
    <!-- Example row of columns -->
<div class="row">
    <div class="col-xs-3">
        <h3>快速通道</h3>
        @if (UserInfo.CurUser.HasRight("辅助功能-销售员面板"))
        {
            <div style="width: 40px; margin: auto">
                <button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick=" OpenFullWindow('@Url.Content("../Client/ToCreate?type=1")', '_blank'); ">来电客户登记</button>
<button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick=" OpenFullWindow('@Url.Content("../Client/ToCreate?type=2")', '_blank'); ">来访客户登记</button>
<button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick=" OpenFullWindow('@Url.Content("../Client/ToCreate?type=3")', '_blank'); ">中介客户报备</button>
                <button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick="window.location.href = ('@Url.Content("../Client/List")'); ">客户资料查询</button>
                <button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick="window.location.href = ('@Url.Content("../Client/ClientTransferIn")'); ">转入客户查询</button>
                <button style="margin:10px 10px 10px 10px" class="btn btn-primary" onclick="window.location.href = ('@Url.Content("../Client/ClientTransferOut")'); ">转出客户查询</button>
            </div>
        }
    </div>
    <div class="col-xs-3">
        <h3>当日邀约</h3><div class="pull-right">
                         [<a href="../Client/InviteReport">报表</a>] [<a href="../Client/InviteList">明细</a>]
                     </div>
        <table class="table table-bordered table-striped">
            <thead>
                <th>邀约类型</th>
                <td>组数</td>
                <td>到访</td>
                <td>完成</td>
            </thead>
            <tbody>
                @foreach (ClientActivityReportView item in ViewBag.InviteList)
                {
                    <tr>
                        <td>@item.Type</td>
                        <td style="text-align:right">
                            @if (@item.Num != 0)
                            {
                                <a href="../Client/InviteList?type=@item.Type" target="_blank">@item.Num</a>
                            }
                            else
                            {
                                @item.Num
                            }
                        </td>
                        <td style="text-align:right">@item.VisitNum</td>
                        <td style="text-align:right">@item.DoneNum</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-2">
        <h3>转移预警</h3><div class="pull-right">
                         [<a href="../Client/AlertList">明细</a>]
                     </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>转移类型</th>
                    <td>预警数量</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ClientTransferAlertReport item in ViewBag.transferAlerts)
                {
                    <tr>
                        <td>@item.TransferType</td>
                        <td style="text-align:right">
                            @if (@item.Num != 0)
                            {
                                <a href="../Client/AlertList?type=@item.TransferType" target="_blank">@item.Num</a>
                            }
                            else
                            {
                                @item.Num
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-2">
        <h3>昨日转入</h3><div class="pull-right">
                         [<a href="../Client/ClientTransferIn">明细</a>]
                     </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>转移类型</th>
                    <td>数量</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ClientTransferAlertReport item in ViewBag.transferIns)
                {
                    <tr>
                        <td>@item.TransferType</td>
                        <td style="text-align:right">@item.Num</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-xs-2">
        <h3>昨日转出</h3><div class="pull-right">
            [<a href="../Client/ClientTransferOut">明细</a>]
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>转移类型</th>
                    <td>数量</td>
                </tr>
            </thead>
            <tbody>
                @foreach (ClientTransferAlertReport item in ViewBag.transferOuts)
                {
                    <tr>
                        <td>@item.TransferType</td>
                        <td style="text-align:right">@item.Num</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="span6">
        <h2>提醒消息</h2>
        <ul>
            <li>。。。</li>
            <li>。。。</li>
        </ul>
        <blockquote>消息是与具体业务相关的提醒，每个用户根据权限不同而显示不同提醒<br /></blockquote>
    </div>
    <hr />
</div>
    @section Footer{
        <style type="text/css">
            .foot {
                border-top: 1px solid #E0E0E0;
                padding: 5px 10px;
                text-align: right;
            }

            html, body {
                width: 100%;
                height: 100%;
                margin: 0px;
                padding: 0px;
                overflow: hidden;
            }


            #foot {
                position: absolute;
                bottom: 0px;
                right: 16px;
                width: 100%;
                height: 20px;
                text-align: center;
                z-index: 2;
                overflow: hidden;
                border-top: 1px solid #E0E0E0;
                color: #999999;
            }
        </style>
        <div id="foot" style="position: absolute;">
            @@Copyright 上海虬溪软件 2013
        </div>

       
    }
