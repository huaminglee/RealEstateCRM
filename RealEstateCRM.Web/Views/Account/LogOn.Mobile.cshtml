@model RealEstateCRM.Web.Models.LogOnModel

@{
    ViewBag.Title = "登录";
}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/jqmcss")
    @Styles.Render("~/Content/mobilecss")
    @Scripts.Render("~/bundles/MyJs")
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
            // disable ajax nav
            $.mobile.ajaxEnabled = false
        });
    </script>
    @Scripts.Render("~/Scripts/jqmJs")
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


</head>
<body>
    <div data-role="page">
        <div data-role="header" data-position="fixed">
            <h3>登陆</h3>
        </div>
        <div data-role="content">
            @using (Html.BeginForm())
            {

                <div class="form-group">
                    <label for="UserName">用户名</label>
                    @Html.TextBoxFor(m => m.UserName, new { autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                    @Html.ValidationSummary(true, "用户名或密码错误，请再试一次")
                </div>
                <div align="center">
                    <input type="submit" data-inline="true" value="确 定" /><input type="reset" data-inline="true" value="重置" />
                </div>

            }
        </div>
        <div data-role="footer" align="center" data-position="fixed">
            @@Copyright 上海虬溪软件 2013
        </div>

    </div>

    <script type="text/javascript">
        var rootpath = '@Url.Content("~")';
        var formsubmited = false;
    </script>
</body>
</html>