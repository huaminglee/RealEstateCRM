@{
    ViewBag.Title = "Change Password";
}

<h2>修改密码</h2>
<script type="text/javascript">
    function checkform() {
        if (document.getElementById("password").value == "") {
            alert("请输入新密码");
            document.getElementById("password").focus();
        }
        document.forms[0].submit();
    }
</script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <div>
        <fieldset>
            <legend>请注意账号安全，在无旁人观看的时候修改密码</legend>

            <div class="editor-label">
                <label class="len80">旧密码</label>   <input type="text" id="oldpassword" name="oldpassword" />@Html.ValidationMessage("oldpassword")
            </div>
            <br />
            <div class="editor-field">
               <label class="len80">新密码</label>   <input type="text" id="password" name="password" />
            </div>
            <p>
                <input type="button" value="确定" onclick="checkform();" />
            </p>
        </fieldset>
    </div>
}
