<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/BootstrapCss")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/redmond")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/BootstrapJs")
    @Scripts.Render("~/bundles/MyJs")
    @RenderSection("scripts", required: false)
<script type="text/javascript">
    var rootpath = '@Url.Content("~")';
    var formsubmited=false;
    $(document).ready(function () {
        $("form").addClass("form-horizontal");

        $("input[type='text']").addClass("form-control");
        $("select").addClass("form-control");
        var getArgs = GetUrlArgs();
        if (getArgs.reload == "1") {
            if (window.opener.opener == 'undefined' || window.opener.opener == null) {
            } else {
                window.opener.location.reload();
            }
        }
        $("form").submit(function () {
            if (formsubmited) {
                alert("请勿重复提交数据");
                return false;
            } else {
                formsubmited = true;
                setTimeout(function () { $("input:submit").disabled = true; }, 100);
                //$("body").html("<div>提交中...</div>");
                return true;
            }
        });
    });
</script>
</head>

    <body>
        
            <div class="container"><div class="navbar navbar-inverse">
                <div class="navbar-header">
                    
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
       
                <div class="navbar-collapse collapse">
                    <ul class="nav  navbar-nav navbar-brand">
                        <li>@ViewBag.Title</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right  navbar-brand">
                        <li class="brand"><img src="@Url.Content("~/content/images/glcp.png")" style="float:left;margin-top: -7px;" /> @System.Configuration.ConfigurationSettings.AppSettings["SubTitle"]</li>            
                    </ul>
       
                </div>
            </div>

            @RenderBody()
            @RenderSection("Main", false)
      </div>
        
        <footer>
            @RenderSection("Footer",false)
        </footer>
    </body>
</html>

