@model OUDAL.Client
@{
    ViewBag.Title = "创建客户";
    Layout = "~/Views/Shared/_MainListLayout.cshtml";
}
@section Main{

    <script type="text/javascript">
        
    </script>
    <div style="width:800px;margin:auto;">
        <div class="ui-widget ui-widget-content ui-corner-all searchdiv">
            @using (Html.BeginForm())
            {
                @Html.MyTextFor(m => m.Name)
                @Html.MyTextFor(m => m.AllPhone)
                <p style="text-align:center">@MyControls.SubmitBtn("查找")</p>
            }
        </div>
        @if (ViewBag.Message)
        {
            <p style="color:red">没有找到完全符合条件的客户</p>
        }
        @if (ViewBag.Show)
        {
            <div id="Clients">
                @if (ViewBag.Clients.Count != 0)
                {
                    <table class="table table-bordered table-striped">
                        <tr><th>姓名</th><th>电话</th><th>所属项目</th></tr>
                        @foreach (ClientView c in ViewBag.Clients)
                        {
                            <tr>
                                <td><a href="./View/@c.Id">@c.Name</a></td>
                                <td>@c.AllPhone</td>
                                <td>@c.ProjectName</td>
                            </tr>
                        }
                    </table>
                }
            </div>

        }
        @if (ViewBag.Button)
        {
            <div class="btn-toolbar" style="width:300px;margin:auto;">
                <div class="btn-group">
                    <form action="./Create?type=1" method="post">
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.AllPhone)
                        <button class="btn btn-primary" type="submit">来电新增</button>
                    </form>
                </div>
                <div class="btn-group">
                    <form action="./Create?type=2" method="post">
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.AllPhone)
                        <button class="btn btn-primary" type="submit">来访新增</button>

                    </form>
                </div>
                <div class="btn-group">
                    <form action="./Create?type=3" method="post">
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.AllPhone)
                        <button class="btn btn-primary" type="submit">邀约新增</button>

                    </form>
                </div>
            </div>

        }
    </div>
}